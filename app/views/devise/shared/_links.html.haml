- if controller_name != 'sessions'
  = link_to t('.sign_in', default: 'Sign in'), new_session_path(resource_name)
  %br
- if devise_mapping.registerable? && controller_name != 'registrations'
  = link_to t('.sign_up', default: 'Sign up'),
    new_registration_path(resource_name)
  %br
- if devise_mapping.recoverable? && controller_name != 'passwords'
  - if controller_name != 'registrations'
    = link_to t('.forgot_your_password', default: 'Forgot your password?'),
      new_password_path(resource_name)
    %br
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  - de = 'Didn\'t receive confirmation instructions?'
  = link_to t('.didn_t_receive_confirmation_instructions', default: de),
    new_confirmation_path(resource_name)
  %br
- if devise_mapping.lockable? && controller_name != 'unlocks'
  - if resource_class.unlock_strategy_enabled?(:email)
    - de = 'Didn\'t receive unlock instructions?'
    = link_to t('.didn_t_receive_unlock_instructions', default: de),
      new_unlock_path(resource_name)
    %br
- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    - po = provider.to_s.titleize
    - de = "Sign in with #{provider.to_s.titleize}"
    = link_to t('.sign_in_with_provider', provider: po, default: de),
      omniauth_authorize_path(resource_name, provider)
    %br
