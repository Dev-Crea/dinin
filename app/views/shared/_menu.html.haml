%nav.top-bar{ 'data-topbar': true, role: 'navigation' }
  %ul.title-area
    %li.name
      %h1= link_to 'Dinin', root_path
  %section.top-bar-section
    %ul.right
      - if utilisateur_signed_in?
        %li
          = link_to sites_path do
            = fa_icon 'sitemap'
            Sites
        %li
          = link_to edit_utilisateur_registration_path do
            = fa_icon 'user'
            Profile
        %li
          = link_to destroy_utilisateur_session_path, method: :delete do
            = fa_icon 'power-off'
            Deconnexion
      - else
        %li= link_to 'Voir les flux', flux_path
        %li
          = link_to t('devise.registrations.new.sign_up', default: 'sign_up'),
            new_utilisateur_registration_path
        %li
          = link_to t('devise.sessions.new.sign_in', default: 'sign_in'),
            new_utilisateur_session_path
