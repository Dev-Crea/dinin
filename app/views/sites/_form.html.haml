= form_for @site do |f|
  = f.hidden_field :utilisateur_id, value: current_utilisateur.id
  .row
    .small-12.columns
      - if @site.errors.any?
        #error_explanation
          %h2
            = pluralize(@site.errors.count, 'error')
            prohibited this site from being saved:
          %ul
      - @site.errors.full_messages.each do |msg|
        %li= msg
  .row
    .small-2.columns= f.label :_type
    .small-10.columns= select_tag :_type, options_for_select(Site::TYPES)
  .row
    .small-2.columns= f.label :domaine, t('site.form.domaine')
    .small-10.columns= f.text_field :domaine
  .row
    .small-2.columns= f.label :tags
    .small-10.columns= f.text_field :tags
  .row
    .small-2.columns= f.label :nom, t('site.form.nom')
    .small-10.columns= f.text_field :nom
  .row
    .small-2.columns= f.label :description, t('site.form.description')
    .small-10.columns= f.text_area :description, rows: 5
  .row
    .small-12.columsn.text-right
      = submit_button f, t('button.save')
