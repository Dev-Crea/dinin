= form_for @site do |f|
  - if @site.errors.any?
    #error_explanation
      %h2= "#{pluralize(@site.errors.count, "error")} prohibited this site from being saved:"
      %ul
        - @site.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :nom
    = f.text_field :nom

  .field
    = f.label :domaine
    = f.text_field :domaine

  .actions
    = f.submit 'Save'
