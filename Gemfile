  gem 'rails', '4.2.6'
  # CSS language
  gem 'sass-rails', '~> 5.0'
  # Javascript language
  gem 'coffee-rails', '~> 4.1.0'
  # create JSON
  gem 'jbuilder', '~> 2.0'
  # HTML language
  gem 'haml', '~> 4.0.6'
