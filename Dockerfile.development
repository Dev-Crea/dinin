# Ruby DevCrea customize
FROM devcrea/base-rails

# Name of Project
ENV PROJECT dinin

# Prepare container
RUN mkdir /$PROJECT
WORKDIR /$PROJECT

# Téléchargement des dépandences
ADD Gemfile* /$PROJECT/

# Execute gems install
RUN bundle install --path /bundle --without production local --jobs 4

# Add files
ADD . /$PROJECT
